{
  "manifest_version": 3,
  "name": "YT Shorts Remover",
  "version": "2.0",
  "description": "Removes Shorts from YouTube pages",
  "host_permissions": ["https://www.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*"],
      "js": ["scripts/content.js"],
      "run_at": "document_idle"
    }
  ]
}